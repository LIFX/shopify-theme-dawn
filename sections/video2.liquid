{{ 'video-section.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

<div class="video-section{% unless section.settings.full_width %} page-width{% endunless %}">
  <div{% if section.settings.full_width %} class="page-width"{% endif %}>
    <h2 class="title">{{ section.settings.heading }}</h2>
  </div>


<video muted autoplay playsinline loop>
    <source src="https://hosted.lifx.co/videos/1_Meet_LIFX_Clean_Video_US.mp4" type="video/mp4">
</video>
</div>

{% schema %}
{
  "name": "t:sections.video2.name",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Video",
      "label": "t:sections.video2.settings.heading.label"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video2.settings.cover_image.label"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https:\/\/www.youtube.com\/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video2.settings.video_url.label",
      "placeholder": "t:sections.video2.settings.video_url.placeholder",
      "info": "t:sections.video2.settings.video_url.info"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.video2.settings.description.label",
      "info": "t:sections.video2.settings.description.info"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.video2.settings.full_width.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:sections.video2.presets.name"
    }
  ]
}
  {% endschema %}
