  </div>
</div>

{% endif %}


{% schema %}

{
  "name": "t:sections.scroller.name",
  "class": "spaced-section spaced-section--full-width overflowHidden",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "tagline1",
      "default": "Tagline",
      "label": "t:sections.scroller.settings.tagline1.label"
    },
    {
      "type": "text",
      "id": "tagline2",
      "default": "Tagline",
      "label": "t:sections.scroller.settings.tagline2.label"
    },
    {
      "type": "text",
      "id": "tagline3",
      "default": "Tagline",
      "label": "t:sections.scroller.settings.tagline3.label"
    },
    {
      "type": "text",
      "id": "tagline4",
      "default": "Tagline",
      "label": "t:sections.scroller.settings.tagline4.label"
    },
    {
      "type": "text",
      "id": "fontColor",
      "default": "#EB7BDD",
      "label": "t:sections.scroller.settings.fontColor.label"
    },
	{
      "type": "checkbox",
      "id": "website_au",
      "default": true,
      "label": "t:sections.image-banner.settings.website_au.label"
    },
	{
      "type": "checkbox",
      "id": "website_ukeu",
      "default": true,
      "label": "t:sections.image-banner.settings.website_ukeu.label"
    },
	{
      "type": "checkbox",
      "id": "website_us",
      "default": true,
      "label": "t:sections.image-banner.settings.website_us.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.scroller.presets.name"
    }
  ]
}
  {% endschema %}
