      <span class="pdp-marquee__text" style="color:{{ section.settings.fontColor }}">{{ section.settings.tagline3 }}</span>
      <p class="pdp-marquee__ellipse" style="color:{{ section.settings.fontColor }}">/</p> 
    
      <span class="pdp-marquee__text" style="color:{{ section.settings.fontColor }}">{{ section.settings.tagline4 }}</span>
      <p class="pdp-marquee__ellipse" style="color:{{ section.settings.fontColor }}">/</p> 
     
  </div>
  <div>
    
      <span class="pdp-marquee__text" style="color:{{ section.settings.fontColor }}">{{ section.settings.tagline1 }}</span>
      <p class="pdp-marquee__ellipse" style="color:{{ section.settings.fontColor }}">/</p> 
    
      <span class="pdp-marquee__text" style="color:{{ section.settings.fontColor }}">{{ section.settings.tagline2 }}</span>
      <p class="pdp-marquee__ellipse" style="color:{{ section.settings.fontColor }}">/</p> 
    
      <span class="pdp-marquee__text" style="color:{{ section.settings.fontColor }}">{{ section.settings.tagline3 }}</span>
      <p class="pdp-marquee__ellipse" style="color:{{ section.settings.fontColor }}">/</p> 
    
