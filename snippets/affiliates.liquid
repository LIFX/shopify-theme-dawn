    <span class="product__text caption-with-letter-spacing">Amazon FR</span></a>   
{% endif %}
{% if product.metafields.my_fields.us_amazon_affiliate != blank %}
	<a href="{{ product.metafields.my_fields.us_amazon_affiliate }}" class="mobile_external affiliateLink" target="_blank">
    <span class="product__text caption-with-letter-spacing">Amazon</span></a>   
{% endif %}
{% if product.metafields.my_fields.us_bestbuy_affiliate != blank %}
	<a href="{{ product.metafields.my_fields.us_bestbuy_affiliate }}" class="mobile_external affiliateLink" target="_blank">
    <span class="product__text caption-with-letter-spacing">Best Buy</span></a>   
{% endif %}
{% if product.metafields.my_fields.au_jbhifi_affiliate != blank %}
	<a href="{{ product.metafields.my_fields.au_jbhifi_affiliate }}" class="mobile_external affiliateLink" target="_blank">
